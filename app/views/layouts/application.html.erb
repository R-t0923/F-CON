<!DOCTYPE html>
<html>
  <head>
    <title>FCon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap用CSSの読み込み -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP&display=swap" rel="stylesheet">
    <!-- Bootstrap用JavaScriptの読み込み -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/cb5359674a.js" crossorigin="anonymous"></script>

    <%# drawerのCDN %>
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/drawer/3.1.0/css/drawer.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/iScroll/5.1.3/iscroll.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/drawer/3.1.0/js/drawer.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </head>
 
  <body class="drawer drawer--left">
    <header role="banner" , class = "bg-dark text-white">
      <div class="container ">
        <div class="row">
          <div class = "col-5">
            <%= link_to root_path do %>
              <span class="nav navbar-brand">
              <%= image_tag 'logo_image2.jpg', class: 'logo_image' %>

              </span>
            <% end %>
            <% if end_user_signed_in?%>
              <span class="current_name">ようこそ <%= current_end_user.nick_name %>さん！</span>
            <% else %>
              <span class="current_name">ようこそ！！　ゲストさん</span>
            <% end %>
          </div>
        </div>
        <div class ="row">
          <div class = "col-8 offset-2">
          <%= render 'layouts/header' %>
          </div>
        </div>
        <button type="button" class="drawer-toggle drawer-hamburger">
          <span class="sr-only">toggle navigation</span>
          <span class="drawer-hamburger-icon"></span>
        </button>
        <%= render 'layouts/drawer' %>
      </div>
    </header>
    <div class="container">
      <div id="wrapper">
        <main role="main" >
          <%= yield %>
        </main>
      </div>
  </div>
  <footer class = "bg-dark text-white">
     <p class="footer-text"><%= image_tag 'logo_image2.jpg', class: 'logo_image' %>© 2020 F/CON</p>
  </footer>
   </body>
</html>
