<!DOCTYPE html>
<html>
  <head>
    <title>FCon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/cb5359674a.js" crossorigin="anonymous"></script>
  </head>
  <div class="container">
    <header>
      <%= render 'layouts/header' %>
    </header>
  </div>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <body>
      <%= yield %>
    </body>
  </div>

  <div class="container">
    <footer>
    </footer>
  </div>
</html>
