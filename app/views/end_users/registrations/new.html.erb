<div class="row">
  <div class="col-4 offset-4">
    <h2 class="mt-5">新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <td>
          <div class="field">
            <%= f.label "ニックネームを入力してください" %><br>
            <%= f.text_field :nick_name, autofocus: true, placeholder:"FCON太郎(15文字以内)" ,size: 46%>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "電話番号を入力してください" %><br />
            <%= f.telephone_field :phone_number, placeholder: "090-1234-5678(ハイフン)", size: 46 %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "メールアドレスを入力してください" %><br />
            <%= f.email_field :email, autocomplete: "email", placeholder:"fcon@fmail.com" ,size: 46 %>
          </div>
        </td>
      </tr>
      
      <tr>
        <td>
          <div class="field">
            <%= f.label "パスワードを入力してください" %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"半角英数字(６文字以上)" ,size: 46 %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "パスワード確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"もう1度入力してください" ,size: 46 %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "性別と年齢を選択してください" %><br />
              <%= f.select :gender, EndUser.genders.keys.to_a, {} %>
              <%= f.select :age, EndUser.ages.keys.to_a, {} %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "サッカーとフットサルの経験年数を入力してください" %><br />
            <%= f.number_field :soccer_experience, placeholder:"サッカーの経験年数" ,min: 0 %>年
            <%= f.number_field :fotsal_experience, placeholder:"フットサルの経験年数" , min: 0 %>年
          </div>
        </td>
      </tr>
      <tr><td>　</td></tr>
      <tr>
        <td>
          <div class="actions">
            <%= f.submit "登録する" ,class:"btn btn-outline-warning btn-sm btn-block" %>
          </div>
        </td>
      </tr>
    <% end %>
    
      <tr>
        <td>
          <%= link_to "ログインページに移動する", new_end_user_session_path %>
        </td>
      </tr>
    </table>
  </div>
</div>
