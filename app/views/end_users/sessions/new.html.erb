<h2>ログイン</h2>
<div class="row">
  <div class="col-4 offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
      <tr>
        <td>
          <div class="field">
            <%= f.label "メールアドレスを入力してください" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"fcon@fmail.com" ,size: 40 %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label "パスワードを入力してください" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"半角英数字(６文字以上)" ,size: 40 %>
          </div>
        </td>
      </tr>
      
      <tr>
        <td>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label "ログイン情報を記憶" %>
            </div>
          <% end %>
        </td>
      </tr>
        
      <tr>
        <td>
          <div class="actions">
            <%= f.submit "ログイン",class:"btn btn-warning btn-sm btn-block" %>
          </div>
        </td>
      </tr>
    <% end %>

      <tr>
        <td>
          <%= render "end_users/shared/links" %>
        </td>
      </tr>
    </table>
  </div>
</div>
