<div class="row">
  <div class="col-10 offset-1">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>チーム名</th>
          <th>カテゴリー</th>
          <th>レベル</th>
          <th>参加日</th>
          <th></th>
        </tr>
      </thead>
      <% join_groups.each do |join_group|%>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag join_group.group, :group_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= join_group.group.name %>
            </td>
            <td>
              <%= join_group.group.category %>
            </td>
            <td>
              <%= join_group.group.level %>
            </td>
            <td><%= join_group.created_at.strftime("%Y年%m月%d日") %></td>
            <td>
              <%= link_to "詳細へ", group_path(join_group.group.id) %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate join_groups, class: "paginate" %>
  </div>
</div>