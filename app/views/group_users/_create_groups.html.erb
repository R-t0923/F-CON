<div class="row">
  <div class="col-10 offset-1">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>チーム名</th>
          <th>カテゴリー</th>
          <th>レベル</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <% create_groups.each do |create_group|%>
        <tbody>
          <tr>
          <td>
              <%= attachment_image_tag create_group, :group_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= create_group.name %>
            </td>
            <td>
              <%= create_group.category %>
            </td>
            <td>
              <%= create_group.level %>
            </td>
            <td><%= create_group.created_at.strftime("%Y年%m月%d日") %></td>
            <td>
              <%= link_to "詳細へ", group_path(create_group.id) %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate create_groups, class: "paginate" %>
  </div>
</div>