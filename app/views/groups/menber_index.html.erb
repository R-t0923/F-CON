<h2 class="mt-5"><%= @group.name%>のメンバー</h2>
<div class="row">
  <div class="col-10 offset-1">
    <table class="table">
      <thead>
        <tr>
          <th><th>
          <th>ニックネーム</th>
          <th>年齢</th>
          <th>フットサル経験</th>
          <th>サッカー経験</th>
          <th></th>
        </tr>
      </thead>
      <% @menbers.each do |menber| %>
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag menber.end_user, :user_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= menber.end_user.nick_name %>
            </td>
            <td>
              <%= menber.end_user.age%>
            </td>
            <td><%= menber.end_user.fotsal_experience %>年</td>
            <td><%= menber.end_user.soccer_experience %>年</td>
            <td>
              <%= link_to "詳細へ", user_path(menber.end_user_id),class: "nav-link" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    
  </div>
</div>