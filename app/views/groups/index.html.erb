<h2 class="mt-5">チーム一覧</h2>
<%# 絞り込み機能%>
<div class="row">
  <div class = "col-6">
    <%= form_tag(groups_path, method: "get") do %>
      <table class="table table-borderless"> 
          <tr>
            <td>
              <strong>チーム名</strong><br>
              <span>
                <%= text_field_tag :name, params[:name],size: 35 %>
              </span>
            </td>
            <td><strong>活動地域</strong><br>
              <span>
                <%= select_tag :city, options_for_select(Group.cities), include_blank: true %>
              </span>
            </td>
            <td><strong>カテゴリー</strong><br>
              <span>
                <%= select_tag :category, options_for_select(Group.categories), include_blank: true %>
              </span>
            </td>
            <td><br><span><%= submit_tag "検索" %></span></td>
          </tr>
      </table>
    <% end %>
  </div>
</div>
<%# 絞り込み機能ここまで%>
<div class="row">
  <div class="col-10 offset-1">
    表示件数：<%= @groups.count%>件
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>チーム名</th>
          <th>活動地域</th>
          <th>カテゴリー</th>
          <th>レベル</th>
          <th></th>
        </tr>
      </thead>
      <% if  @groups.present? %>
        <% @groups.each do |group|%>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag group, :group_image, size: "50x50", format: 'jpeg', fallback: "no_image2.jpg"%>
              </td>
              <td><%= group.name %></td>
              <td><%= group.city %></td>
              <td><%= group.category %></td>
              <td><%= group.level %></td>
              <td>
              <%= link_to "チーム詳細へ", group_path(group.id),class: "nav-link" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      <% else %>
        <h4>検索結果はありません</h4>
    <% end %>
    </table>
    <%= paginate @groups, class: "paginate" %>
  </div>
</div>
