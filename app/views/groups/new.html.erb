<h2>チーム作成</h2>

<%= form_for @group, url:groups_path do |f| %>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table">
        <tr>
          <td>チーム名</td>
          <td>
            <%= f.text_field :name, placeholder:"チームFCON(15文字以内)",size: 50 %>
          </td>
        </tr>
        <tr>
        <td>地域</td>
          <td>
            <%= f.select :city, Group.cities.keys.to_a, {}  %>
          </td>
        </tr>
        <tr>
        <td>カテゴリー</td>
          <td>
            <%= f.select :category, Group.categories.keys.to_a, {}  %>
          </td>
        </tr>
        <tr>
        <td>レベル</td>
          <td>
            <%= f.select :level, Group.levels.keys.to_a, {}  %>
          </td>
        </tr>
        <tr>
        <td>男女比</td>
          <td>
            男性<%= f.number_field :male_member, min: 0 ,max:99%>人<span>　</span>
            女性<%= f.number_field :female_member, min: 0 ,max:99%>人
          </td>
        </tr>
        <tr>
        <td>平均年齢</td>
          <td>
            <%= f.number_field :average_age, min: 0 ,max:99%>歳
          </td>
        </tr>
        <td>チーム画像</td>
        <td>
          <%= f.attachment_field :group_image, placeholder: "画像選択" %>
        </td>
        <tr>
          <td>チーム紹介</td>
          <td>
            <%= f.text_area :introduction, placeholder:"こんにちは！！" ,size: "50*100"%>
          </td>
        </tr>
        <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "登録する" ,class:"btn btn-warning btn-sm w-75" %>
          </div>
        </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>

