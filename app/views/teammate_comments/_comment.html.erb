<% comments.each do |comment| %>
  <tr>
    <td width="160">
      <%= comment.end_user.nick_name %>
    </td>
    <td width="250">
      <%= simple_format(comment.comment) %>
    </td>
    <td width="160">
      <%= comment.created_at.strftime("%Y年%m月%d日") %>
      </td>
    <td width="135">
      <% if comment.end_user == current_end_user %>
      <%# teammate_recruitmentのidとcommentのidを両方渡している。 %>
        <%= link_to "コメントを消す", teammate_recruitment_teammate_comment_path(comment.teammate_recruitment.id,comment.id), method: :delete, class:"btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>