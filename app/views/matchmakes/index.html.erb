<h2>マッチメイク募集一覧</h2>
<%# 絞り込み検索 %>
<div class="row">
  <div class = "col-8">
    <%= form_tag(matchmakes_path, method: "get") do %>
      <table class="table table-borderless"> 
          <tr>
            <td>
              <strong>チーム名</strong><br>
              <span>
                <%= text_field_tag :name, params[:name],size: 35 %>
              </span>
            </td>
            <td><strong>募集日程</strong><br>
              <span>
                <%= date_field_tag :day, params[:day] %>
              </span>
            </td>
            <td><strong>募集カテゴリー</strong><br>
              <span>
                <%= select_tag :category, options_for_select(Matchmake.categories), include_blank: true %>
              </span>
            </td>
            <td>
              <strong>募集メンバー</strong><br>
              <span>
                <%= select_tag :level, options_for_select(Matchmake.levels), include_blank: true %>
              </span>
            </td>
            <td><br><span><%= submit_tag "検索" %></span></td>
          </tr>
      </table>
    <% end %>
  </div>
</div>
<%# 絞り込み検索ここまで %>

<div class ="row">
  <% @matchmakes.each do |matchmake|%>
    <div class="col-6">
      <table class="table table-bordered">
        <tr>
          <td width="125">
            <%= attachment_image_tag matchmake.group, :group_image, size: "125x125", fallback: "no_image2.jpg"%>
          </td>
          
          <td>
            <%= link_to matchmake_path(matchmake.id) do%>
              <strong><%= matchmake.title%></strong><br>
            <% end %>
            <strong>チーム名　　　　</strong><%= matchmake.group.name %><br>
            <strong>募集日程　　　　</strong><%= matchmake.day.strftime("%Y年%m月%d日") %> <%= matchmake.time.strftime("%H時%M分〜") %><br>
            <strong>募集カテゴリー　</strong><%= matchmake.category %><br>
            <strong>募集メンバー　　</strong><%= matchmake.level %><br>
            <strong>募集数　　　　　</strong><%= matchmake.capacity %>チーム<br>
          </td>
        </tr>
      </table>
    </div>
  <% end %>
  <%= paginate @matchmakes, class: "paginate" %>
</div>