<h2>メンバー募集一覧</h2>
<%# 絞り込み検索 %>
<div class="row">
  <div class = "col-8">
    <%= form_tag(teammate_recruitments_path, method: "get") do %>
      <table class="table table-borderless"> 
          <tr>
            <td>
              <strong>チーム名</strong><br>
              <span>
                <%= text_field_tag :name, params[:name],size: 35 %>
              </span>
            </td>
            <td><strong>活動地域</strong><br>
              <span>
                <%= select_tag :city, options_for_select(Group.cities), include_blank: true %>
              </span>
            </td>
            <td><strong>カテゴリー</strong><br>
              <span>
                <%= select_tag :category, options_for_select(Group.categories), include_blank: true %>
              </span>
            </td>
            <td>
              <strong>募集メンバー</strong><br>
              <span>
                <%= select_tag :level, options_for_select(TeammateRecruitment.levels), include_blank: true %>
              </span>
            </td>
            <td><br><span><%= submit_tag "検索" %></span></td>
          </tr>
      </table>
    <% end %>
  </div>
</div>
<%# 絞り込み検索ここまで %>

<div class ="row">
  <% @teammate_recruitments.each do |teammate_recruitment|%>
    <div class="col-6">
      <table class="table table-bordered">
        <tr>
          <td width="125">
            <%= attachment_image_tag teammate_recruitment.group, :group_image, size: "125x125", fallback: "no_image2.jpg"%>
          </td>
          
          <td>
            <%= link_to teammate_recruitment_path(teammate_recruitment.id) do%>
              <strong><%= teammate_recruitment.title%></strong><br>
            <% end %>

            <strong>チーム名　　</strong><%= teammate_recruitment.group.name %><br>
            <strong>カテゴリー　</strong><%= teammate_recruitment.group.category %><br>
            <strong>募集メンバー　</strong><%= teammate_recruitment.level %><br>
            <strong>活動地域　　</strong><%= teammate_recruitment.group.city %><br>
          </td>
        </tr>
      </table>
    </div>
  <% end %>
  <%= paginate @teammate_recruitments, class: "paginate" %>
</div>


