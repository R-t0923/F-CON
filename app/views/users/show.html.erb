<h2>マイページ</h2>
<div class="row">
  <div class="col-4 offset-1">
    <table class="table table-borderless">
      <tr>
        <td>
        <%= attachment_image_tag @user, :user_image, size: "300x250", fallback: "no_image.jpg"%>
        </td>
      </tr>
      
      <%# ログインユーザーと@userが一緒なら以下の情報が表示 %>
      <% if @user == current_end_user || current_end_user.admin? %>
      <tr>
        <td>
          <%= link_to "編集する",edit_user_path(@user) ,class: "btn btn-primary btn-sm btn-block" %>
        </td>
      </tr>
      <tr>
        <td>
        <%= link_to "退会する", user_path, method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-danger btn-sm btn-block" %>
        <td>
      </tr>
      <tr>
        <td><%= link_to "チームを作成する", new_group_path ,class: "btn btn-success btn-sm btn-block"%></td><br>
      </tr>
      <% end %>
      <%# ここまで %>
    </table>
  </div>
  <div class="col-6">
    <table class="table table-bordered">
      <tr>
        <th>ニックネーム</th>
        <td><%= @user.nick_name %></td>
      </tr>
      <tr>
        <th>性別</th>
        <td><%= @user.gender %></td>
      </tr>
      <tr>
        <th>年齢</th>
        <td><%= @user.age %></td>
      </tr>
      <tr>
        <th>フットサル経験</th>
        <td><%= @user.fotsal_experience %></td>
      </tr>
      <tr>
        <th>サッカー経験</th>
        <td><%= @user.soccer_experience %></td>
      </tr>
    </table>
    <table class="table table-bordered">
      <tr><strong>自己紹介</strong></tr>
      <%# 入力された段落通りに表示 %>
      <td><%= simple_format(@user.introduction) %></td>
    </table>
    <table class="table">
      <tr><strong><%= @user.nick_name %>のチーム一覧</strong></tr>
      <% @groups.each do |group|%>
        <tr> 
          <td><%= group.name %></td>
          <td>
            <%= link_to "チーム詳細へ", group_path(group.id) %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @groups, class: "paginate" %>
  </div>
</div>
<div class="row">
  <div class="col-4 offset-1">
  <%# ログインユーザーと@userが一緒なら以下の情報が表示 %>
    <% if @user == current_end_user %>
      <table class="table table-borderless">
        <tr>
          <td><%= link_to "マッチメイク 検討中"%></td>
        </tr>
        <tr>
          <td><%= link_to "メンバー募集のお気に入り一覧", user_teammate_favorites_path(current_end_user)%></td>
        </tr>
      </table>
    <% end %>
    <%# ここまで %>
  </div>
</div>



