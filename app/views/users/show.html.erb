<h2>マイページ</h2>
<div class="row">
  <div class="col-4">
    <%= attachment_image_tag @user, :user_image, size: "200x200", fallback: "no_image.jpg"%>
  </div>
  <div class="col-6">
    <%= simple_format(@user.introduction) %>
  </div>
</div>
  <div class="row">
    <div class="col-4">
      <table>
      <tr>
        <% if @user == current_end_user %>
        <td>
          <%= link_to "編集する" , edit_user_path(@user)%>
        </td>
        <% end %>
      </tr>
        <tr>
          <td><%= link_to "チーム作成する", "#" %></td>
        </tr>
        <tr>
          <td><%= link_to "マッチメイク 検討中"%></td>
        </tr>
        <tr>
          <td><%= link_to "メンバー募集 検討中"%></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <table class="table">
        <tr>
          <td>名前</td>
          <td><%= @user.nick_name%></td>
        </tr>
        <tr>
          <td>性別</td>
          <td><%= @user.gender%></td>
        </tr>
        <tr>
          <td>フットサル経験</td>
          <td><%= @user.fotsal_experience %>年</td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <table class="table">
        <tr>
          <td>所属チーム</td>
          <td><%= link_to "所属チーム","#" %></td>
        </tr>
        <tr>
          <td>年齢</td>
          <td><%= @user.age%></td>
        </tr>
        <tr>
          <td>サッカー経験</td>
          <td><%= @user.soccer_experience %>年</td>
        </tr>
      </table>
    </div>
  </div>
</div>

